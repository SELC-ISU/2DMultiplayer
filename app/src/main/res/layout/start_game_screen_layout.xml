<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#443499">

    <RadioButton
        android:id="@+id/btnRadio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:buttonTint="#FFFFFF"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnChat2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSingleGame"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_button"
        android:text="One Game"
        android:textAllCaps="false"
        android:textColor="#443499"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnThreeGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnThreeGames"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/round_button"
        android:text="Best of 3"
        android:textAllCaps="false"
        android:textColor="#443499"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnFiveGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSingleGame" />

    <Button
        android:id="@+id/btnFiveGames"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="126dp"
        android:background="@drawable/round_button"
        android:text="Best of 5"
        android:textAllCaps="false"
        android:textColor="#443499"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnChat2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThreeGames" />

    <Button
        android:id="@+id/btnBackToStart"
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gradient_button"
        android:text="Back to Start"
        android:textAllCaps="false"
        android:textColor="#443499"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFiveGames" />

    <Button
        android:id="@+id/btnChat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gradient_button"
        android:text="Chat"
        android:textAllCaps="false"
        android:textColor="#443499"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRadio2" />
</androidx.constraintlayout.widget.ConstraintLayout>